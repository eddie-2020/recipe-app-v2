<section class="container">
  <h2 class="text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false"},
  url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group py-2">
      <%= f.label :name, class: "fs-5 mt-2" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field form-group py-2">
      <%= f.label :email, class: "fs-5 mt-2" %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group py-2">
      <%= f.label :password, class: "fs-5 mt-2" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "(6 characters minimum)" %>
    </div>

    <div class="field form-group py-2">
      <%= f.label :password_confirmation, class: "fs-5 mt-2" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="field form-group py-2">
      <%= f.submit "Sign up", class: "d-flex justify-content-center w-100 m-auto btn-sm mt-4 mb-2 btn btn-primary"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>