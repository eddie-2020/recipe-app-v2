<section class="container">
  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false"}, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "fs-5" %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "fs-5" %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "d-flex justify-content-center w-100 m-auto btn-sm mt-4 mb-2 btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
